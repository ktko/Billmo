<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/default_propic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/default_user"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <TextView
                android:id="@+id/profile_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_marginLeft="16dp"
                tools:layout_marginBottom="5dp"
                tools:text="@string/name_header"
                tools:textSize="40sp" />

            <TextView
                android:id="@+id/profile_balance_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/balance_header"
                tools:textSize="20sp"
                tools:layout_marginLeft="16dp"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_header"
            android:textStyle="bold|normal"
            android:textSize="20sp"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/displayed_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_gravity="center"
            tools:text="@string/username_placer"
            tools:textSize="15sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_header"
            android:textStyle="bold|normal"
            android:textSize="20sp"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/displayed_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_gravity="center"
            tools:text="@string/email_placer"
            tools:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_header"
            android:textStyle="bold|normal"
            android:textSize="20sp"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/shown_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_gravity="center"
            tools:text="@string/password_placer"
            tools:textSize="15sp" />
    </LinearLayout>

</LinearLayout>